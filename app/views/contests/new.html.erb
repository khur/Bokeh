<% provide(:title, 'New Contest') %>
<h1>New Contest</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @contest do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :criteria %>
      <%= f.text_area :criteria, class: 'form-control' %>

      <%= f.submit "Create contest", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
